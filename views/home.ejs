<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Homepage</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <div class="container mt-3 d-flex gap-3">

            <% blogs.forEach(blog=> { %>

                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %> cover image">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <p class="card-text">
                            <%= blog.body %>
                        </p>
                        <a href="blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
                <% }) %>
        </div>
        <%- include('./partials/scripts.ejs') %>
</body>

</html>