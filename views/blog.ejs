<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <div class="container">
            <h1>
                <%= blog.title%>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="700px">
            <pre><%= blog.body %> </pre>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="50px" style="border-radius: 50%;">
            <%= blog.createdBy.fullName %>
        </div>

        <div class="mt-3 container">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= locals.error %>
                </div>
                <% } %>
                    <% if (locals.user) { %>
                        <form action="/blog/comment/<%= blog._id %>" method="post">
                            <div class="mb-3">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="content"
                                        placeholder="Enter your comment" required>
                                    <button class="btn btn-sm btn-primary mt-3" type="submit">Add</button>
                                </div>
                            </div>
                        </form>
                        <% } %>
        </div>

        <div class="mt-3 container">
            <% comments.forEach(comment=> { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px" style="border-radius: 50%;">
                    <%= comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                </div>
                <% }) %>
        </div>

        <%- include('./partials/scripts.ejs') %>
</body>

</html>