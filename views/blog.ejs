<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <div class="content-wrap">
        <div class="container mt-4">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1 class="mb-4"><%= blog.title %></h1>
                    <img src="<%= blog.coverImageURL %>" class="img-fluid rounded mb-4" alt="<%= blog.title %> cover image">
                    <div class="d-flex align-items-center mb-4">
                        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" class="rounded-circle me-3">
                        <div>
                            <h5 class="mb-0"><%= blog.createdBy.fullName %></h5>
                            <p class="text-muted mb-0"><%= blog.createdAt.toLocaleDateString() %></p>
                        </div>
                    </div>
                    <div class="blog-body">
                        <div class="fs-5 blog-content"><%= blog.body %></div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-8 offset-lg-2">
                    <div class="comment-section">
                        <h3>Comments (<%= comments.length %>)</h3>
                        <% if (locals.error) { %>
                            <div class="alert alert-danger" role="alert">
                                <%= locals.error %>
                            </div>
                        <% } %>
                        <% if (locals.user) { %>
                            <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-4">
                                <div class="mb-3">
                                    <textarea class="form-control" name="content" placeholder="Write a comment..." required></textarea>
                                </div>
                                <button class="btn btn-primary" type="submit">Post Comment</button>
                            </form>
                        <% } %>
                        <div class="comments-list">
                            <% comments.forEach(comment => { %>
                                <div class="comment d-flex mb-4">
                                    <img src="<%= comment.createdBy.profileImageURL %>" width="50px" height="50px" class="rounded-circle me-3">
                                    <div>
                                        <h6 class="mb-1"><%= comment.createdBy.fullName %></h6>
                                        <p class="text-muted mb-1"><%= comment.createdAt.toLocaleDateString() %></p>
                                        <p><%= comment.content %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <%- include('./partials/scripts.ejs') %>
        <%- include('./partials/footer.ejs') %>
</body>

</html>